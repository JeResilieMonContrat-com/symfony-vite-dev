{
    "php-cs-fixer.executablePath": "${workspaceFolder}/bin/php-cs-fixer",
    "phpstan.rootDir": "src/vite-bundle",
    "intelephense.diagnostics.enable": false,
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/.svn/**",
        "**/.hg/**",
        "**/CVS/**",
        "**/.DS_Store/**",
        "**/node_modules/**",
        "**/bower_components/**",
        "**/vendor/**/{Tests,tests}/**",
        "**/.history/**",
        "**/vendor/**/vendor/**",
        // extra
        "**/playground/**/vendor/**"
    ]
}
